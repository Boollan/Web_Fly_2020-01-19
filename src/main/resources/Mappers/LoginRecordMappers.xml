<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boollan.dao.ILoginRecordDao">

    <!--配置实体类数据-->
    <resultMap id="BaseUserResult" type="com.boollan.domain.login_record">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="USERNAME" property="username" jdbcType="VARCHAR"/>
        <result column="ADDIP" property="addip" jdbcType="VARCHAR"/>
        <result column="CLIENT" property="client" jdbcType="VARCHAR"/>
        <result column="DATETIME" property="datetime" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="insertLoginUserLog" parameterType="com.boollan.domain.login_record">
        insert into login_record(username,addip,client,datetime)values(#{username},#{addip},#{client},#{datetime})
    </insert>
    <select id="findAllLoginUserLog" resultType="com.boollan.domain.login_record">
        select * from login_record
    </select>
    <select id="findLoginLogbyUser" resultType="com.boollan.domain.login_record">
        select * from login_record where username=#{username}
    </select>

</mapper>