<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boollan.dao.IAccountUserDao">

    <!--配置实体类数据-->
    <resultMap id="BaseUserResult" type="com.boollan.domain.account_user">
        <id column="ID" property="id" jdbcType="VARCHAR"/>
        <result column="USERNAME" property="username" jdbcType="VARCHAR"/>
        <result column="PASSWORD" property="password" jdbcType="VARCHAR"/>
        <result column="DONATIONS" property="donations" jdbcType="VARCHAR"/>
        <result column="EMAIL" property="email" jdbcType="VARCHAR"/>
        <result column="PERMISSIONS" property="permissions" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insetUserInfo">
        insert into accout_user(username,password,email,donations,permissions)values(#{username},#{password},#{email},#{donations},#{permissions})
    </insert>
    <update id="updateUserInfo">
        update accout_user set password=#{password},email=#{email},donations=#{donations},permissions=#{permissions} where username=#{username}
    </update>
    <delete id="deleteUserInfo">
        delete from accout_user where username=#{accountUser}
    </delete>
    <select id="findAllUserInfoList" resultMap="BaseUserResult">
        select * from accout_user
    </select>
    <select id="findInfoByUser" resultMap="BaseUserResult">
        SELECT * FROM accout_user where username = #{username}
    </select>
    <select id="findInfoByEmail" resultMap="BaseUserResult">
        select * from accout_user where email=#{Email}
    </select>
</mapper>